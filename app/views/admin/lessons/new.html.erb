<% provide(:title, "新規商品") %>
<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>授業新規登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_with model: @lesson, url: admin_lessons_path, local: true do |f| %>
      <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@lesson.errors.count, "error") %> prohibited this obj from being saved:</h3>

      <ul>
      <% @lesson.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>
      <table>
        <tr>
          <div class="form-group">
            <th><%= f.label :授業画像 %></th>
            <th><%= f.attachment_field :image %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :授業名 %></th>
            <td><%= f.text_field :lesson_name, placeholder:"授業名" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :授業説明 %></th>
            <td><%= f.text_area :introduction, size: "50x5", placeholder:"ここに説明文を記述します" %></td>
          </div>
        </tr>

        <tr>
        <div class="form-group">
          <th><%= f.label :税込 %></th>
          <td><%= f.text_field :price, placeholder:"1000" %>円</td>
        </div>
        </tr>
        <tr>
        <div class="form-group">
          <th><%= f.label :販売ステータス %></th>
          <td><%= f.radio_button :is_active, true, checked: true %>
              <%= f.label :is_active, "受付中" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "受付停止中" %>
          </td>
        </div>
        </tr>
        <tr>
        <div class="form-action">
          <th><%= f.submit "新規登録", class:"btn btn-success" %></th>
        </div>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>