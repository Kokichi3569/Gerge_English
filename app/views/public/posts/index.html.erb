<h1>投稿一覧</h1>
<%= link_to '新規投稿', new_public_post_path, class: "btn btn btn-outline-secondary" %>
<table class="table mb-5">
  <thread>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>更新日時</th>
    </tr>
  </thread>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, public_post_path(post.id) %></td>
      <td><%= post.body %></td>
      <td><%= post.updated_at %></td>
    </tr>
    <% end %>
  </tbody>

</table>

